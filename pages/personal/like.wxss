/* pages/personal/like.wxss */
.likes .commodity {
  width: 100%;
  height: 200rpx;
  margin-bottom: 20rpx;
  display: flex;
}

.c-imvi {
  height: 200rpx;
  width: 270rpx;
}

.likes .c-image {
  height: 200rpx;
  width: 270rpx;
}

.likes .letter {
  flex: 1;
  height: 200rpx;
}

.likes .letter .c_dl {
  text-indent: 15rpx;
}

.likes .letter .c_view1 {
  width: 435rpx;
  font-size: 15px;
  line-height: 20px;
  margin-top: 8px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.likes .letter .c_view2 {
  font-size: 40rpx;
  line-height: 44rpx;
  padding-top: 22rpx;
  color: #e23a3a;
}

.likes .letter .c_view3 {
  font-size: 15px;
  line-height: 18px;
  padding-top: 8px;
  color: #969494;
}

.likes .letter text {
  font-size: 30rpx;
}

.likes .letter .purchase {
  background-color: #e23a3a;
  -moz-border-radius: 50rpx;
  -webkit-border-radius: 50rpx;
  border-radius: 50rpx;
  height: 83rpx;
  width: 83rpx;
  margin-right: 10rpx;
  margin-top: 35rpx;
}

.likes .letter .p-image {
  height: 100%;
  width: 100%;
}

.c-fl {
  display: flex;
}

.c-fll {
  flex: 1;
}

.no-data {
  text-align: center;
  font-size: 16px;
  margin-top: 30px;
}