/*合计*/

.w-total {
  background-color: #fff;
  height: 85rpx;
  width: 750rpx;
  position: fixed;
  bottom: 0rpx;
  border-top-width: 1rpx;
  border-top-style: solid;
  border-top-color: #e3e3e3;
}

.w-total .total {
  height: 85rpx;
  font-size: 34rpx;
  line-height: 85rpx;
  float: left;
  margin-left: 15rpx;
}

.w-total .total .w-text {
  font-size: 18px;
  color: #e23a3a;
}

.w-total .payment {
  font-size: 34rpx;
  line-height: 85rpx;
  color: #fff;
  background-color: #e23a3a;
  text-align: center;
  float: right;
  height: 85rpx;
  width: 270rpx;
}

.blank {
  height: 85rpx;
