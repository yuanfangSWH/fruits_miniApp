page {
  background-color: #f6f6f6;
}

/*地址*/

.w-box {
  width: 720rpx;
  height: 300rpx;
  margin-right: auto;
  margin-left: auto;
  background-color: #fff;
  margin-top: 20rpx;
  -moz-border-radius: 30rpx;
  -webkit-border-radius: 30r5px;
  border-radius: 30rpx;
}

.w-num {
  display: flex;
  width: 690rpx;
  height: 48rpx;
  margin-right: auto;
  margin-left: auto;
  font-size: 34rpx;
  padding-top: 20rpx;
}

.w-mz {
  width: auto;
  padding-right: 50rpx;
}

.w-hm {
  flex: 1;
}

.w-add {
  width: 690rpx;
  height: auto;
  margin-right: auto;
  margin-left: auto;
  line-height: 30rpx;
  padding-top: 10rpx;
}

.w-label {
  display: inline-block;
  height: 44rpx;
  background-color: #ffcd5f;
  font-size: 26rpx;
  text-align: center;
  line-height: 44rpx;
  -moz-border-radius: 10rpx;
  -webkit-border-radius: 10r5px;
  border-radius: 10rpx;
  color: #fff;
  margin-right: 10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.w-text {
  font-size: 30rpx;
  color: #7e7e7e;
}

.w-line {
  width: 690rpx;
  height: 70rpx;
  margin-right: auto;
  margin-left: auto;
  display: flex;
  border-top-width: 1rpx;
  border-top-style: dashed;
  border-top-color: #aaa;
  margin-top: 20rpx;
  padding-top: 20rpx;
}

.w-mor {
  flex: 1;
  height: 40rpx;
  font-size: 26rpx;
  line-height: 16rpx;
}

.w-editor {
  width: 180rpx;
  height: 70rpx;
  display: flex;
}

.w-change {
  width: 36rpx;
  height: 36rpx;
  margin-left: 10rpx;
  margin-right: 70rpx;
}

.w-delete {
  width: 35rpx;
  height: 42rpx;
}

.w-editor image {
  width: 100%;
  height: 100%;
}

.w-ic {
  margin-right: 10rpx;
}

/*按钮*/

.w-the {
  width: 100%;
  padding: 5px 0;
  background-color: #fff;
  border-top: 1px solid #e0e0e0;
  position: fixed;
  bottom: 0;
}

.w-new {
  font-size: 28rpx;
  line-height: 70rpx;
  text-align: center;
  color: #fff;
  width: 690rpx;
  height: 70rpx;
  margin-right: auto;
  margin-left: auto;
  -moz-border-radius: 30rpx;
  -webkit-border-radius: 30r5px;
  border-radius: 30rpx;
  background-color: #ffcd5f;
}
