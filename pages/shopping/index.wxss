  bottom: 0rpx;
}

.w-total .total {
  height: 85rpx;
  font-size: 34rpx;
  line-height: 85rpx;
  float: left;
  margin-left: 15rpx;
}

.w-total .total .w-text {
  color: #e23a3a;
}

.w-total .payment {
  font-size: 34rpx;
  line-height: 85rpx;
  color: #fff;
  background-color: #33b5e2;
  text-align: center;
  float: right;
  height: 85rpx;
  width: 270rpx;
}

