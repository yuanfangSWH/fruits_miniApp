/*标题*/

.w-title {
  height: 77rpx;
  width: 720rpx;
  margin-right: auto;
  margin-left: auto;
  border-bottom-width: 1rpx;
  border-bottom-style: solid;
  border-bottom-color: #4d4d4c;
  margin-bottom: 20rpx;
}

.w-title .t_text1 {
  margin-left: 15rpx;
  font-size: 32rpx;
  line-height: 77rpx;
  color: #4d4d4c;
  display: block;
  height: 100%;
  width: 220rpx;
  float: left;
}

.w-title .t_text2 {
  font-size: 28rpx;
  line-height: 77rpx;
  color: #919191;
  text-decoration: underline;
  display: block;
  height: 100%;
  width: 160rpx;
  float: right;
}

/* 旧商品样式 */
.goods-list {
  padding: 10px 5px 10px 0;
}

.goods-list .goods {
  margin-top: 14px;
}

.goods .image {
  margin-right: 5px;
  max-height: 120px;
  border-radius: 2px;
  overflow: hidden;
}

.goods .image image {
  display: block;
  width: 90px;
  height: 90px;
  margin: 0 auto;
}

.goods .weui-cell {
  padding: 0;
}

.goods .shadow {
  width: 100%;
  box-shadow: 1px 1px 1px 2px #eee;
  padding: 4px 0px 4px 4px;
}

.goods .content {
  position: relative;
  margin-right: 5px;
}

.goods .content .title {
  color: #1c2438;
  font-size: 15px;
  line-height: 20px;
  max-height: 44px;
  overflow: hidden;
  /* max-width: 210px; */
}

.goods .content .intro {
  font-size: 12px;
  color: #999;
  max-height: 3em;
  overflow: hidden;
}

.goods .content .footer {
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 2px;
}

.goods .content .price {
  color: #ff461f;
  font-weight: bold;
  font-size: 16px;
  line-height: 32px;
}

.empty image {
  margin-top: 100px;
  width: 64px;
  max-height: 64px;
}

.empty .tip {
  font-size: 14px;
  color: #999;
}

